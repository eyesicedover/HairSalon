@{
  Layout = "_Layout";
}

<h1>Current Stylists</h1>
@if (@Model.Count == 0)
{
  <h2>There are no stylists yet!</h2>
}
@foreach (var stylist in Model)
{
  <h3><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></h3>
}
<p><a href="/stylists/new">Add A Stylist</a></p>
<p><a href="/">Back to the Start</a></p>
